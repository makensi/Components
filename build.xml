<project name="Components" default="build">

	<property name="name" value="nc-components" />
	<property name="version" value="0.0.1-beta" />
	<property name="company" value="nuevascreaciones" />
	
	<!-- ================================= 
          target: build              
         ================================= -->
	<target name="build" description="create dist component jar">
		<delete dir="dist" />
		<mkdir dir="dist" />
		<jar destfile="dist/${name}_${version}.jar" basedir="bin" excludes="*.apk, *.ap_, *.dex">
			<manifest>
				<attribute name="Built-By" value="${user.name}" />
				<attribute name="Implementation-Title" value="${name}" />
				<attribute name="Implementation-Version" value="${version}" />
				<attribute name="Implementation-Vendor" value="${company}" />
			</manifest>
		</jar>
		
		<exec executable="parcel"> 
			<arg value="package" /> 
			<arg value="parcel.json" /> 
			<arg value="--dir" />
			<arg value="dist" /> 
			<arg value="-j" /> 
			<arg value="dist/${name}.${version}.jar" />
			<arg value="-d" />
			<arg value="README" /> 
			<arg value="LICENSE" />
		</exec>

	</target>

</project>
